[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
on_info = {+rad_door_init} ph_door@closed

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open %-rad_door_init%
;snd_open_start = trader_door_open_start
;snd_close_start = trader_door_close_start
;snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_info = {+rad_door_init} ph_door@closed
;snd_open_start = trader_door_open_start
;snd_close_start = trader_door_close_start
;snd_close_stop = trader_door_close_stop