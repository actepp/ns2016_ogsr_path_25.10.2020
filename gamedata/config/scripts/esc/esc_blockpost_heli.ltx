[logic]
active = heli_move@idle

[heli_move@idle]
path_move = esc_heli_blockpost_idle_move
engine_sound = false
on_info = {=gulag_casualities_ge(esc_blokpost:8)} heli_move@fly, {+esc_btr_killed} heli_move@sound
combat_safe_altitude = -50

[heli_move@sound]
path_move = esc_heli_blockpost_idle_move
engine_sound = true
combat_safe_altitude = -50
on_timer = 25000 | heli_move@fly

[heli_move@fly]
path_move = esc_heli_blockpost_fly
engine_sound = true
combat_enemy = actor
combat_use_rocket = true
combat_use_mgun = true
rocket_delay = 3000
combat_safe_altitude = -70
on_timer = 120000 | heli_move@retreat

[heli_move@retreat]
path_move = esc_heli_blockpost_idle_move
engine_sound = true
combat_use_rocket = false
combat_use_mgun = false
combat_safe_altitude = -50
on_timer = 120000 | heli_move@stop

[heli_move@stop]
path_move = esc_heli_blockpost_idle_move
engine_sound = false
