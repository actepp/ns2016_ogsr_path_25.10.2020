on_info4 = {+esc_pes_stop} sr_idle@20

[sr_idle@1]
on_timer = 8950 | sr_idle@2 %=run_postprocess(radar_wake:3) =stop_postprocess(1)%

[sr_idle@2]
on_timer = 4000 | sr_idle@3 %=run_cam_effector(prison_1:4) =stop_cam_effector(2) =enable_ui_elements(input)%

[sr_idle@3]
on_timer = 6500 | sr_idle@4 %=enable_ui_elements(hud)%

[sr_idle@4]
on_timer = 2450 | sr_idle@5 %=run_postprocess(yantar_underground_psi:5) =enable_ui_elements(weapon)%

[sr_idle@5]
on_timer = 2000 | sr_idle@6 %+esc_start =stop_cam_effector(4) =stop_postprocess(3) =stop_postprocess(5)%

[sr_idle@6]
on_info = {+esc_start} sr_idle

[sr_idle@7]
on_timer = 9000 | sr_idle@8 %=run_postprocess(yantar_underground_psi:6:true)%

[sr_idle@8]
