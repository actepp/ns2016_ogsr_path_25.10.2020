[sr_idle@15]
on_timer = 4000 | sr_idle@16 %=run_cam_effector(prison_1:10) =stop_cam_effector(9) =ex_unload.esc_drug_load =enable_ui_elements(input) =arhara_dialog.del_pes_teleport_zone%

[sr_idle@16]
on_timer = 6500 | sr_idle@17 %=enable_ui_elements(hud)%

[sr_idle@17]
on_timer = 2450 | sr_idle@18 %=enable_ui_elements(weapon)%

[sr_idle@18]
on_timer = 2000 | sr_idle@19 %+esc_pes_stop =stop_cam_effector(10) =stop_postprocess(8) =ex_unload.esc_drug_wpn%

[sr_idle@19]
