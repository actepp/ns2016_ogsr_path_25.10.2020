[logic]
active = ph_door@open

[ph_door@open]
locked = true
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {+jup_doop_close} ph_door@close

[ph_door@close]
closed = true
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_actor_dist_le_nvis = 2.5 | ph_door@open2

[ph_door@open2]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_actor_dist_ge_nvis = 2.5 | ph_door@close

