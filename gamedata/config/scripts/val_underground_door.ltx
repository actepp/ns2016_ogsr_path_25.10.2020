[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_locked
on_use = {+val_actor_has_barman_key +val_actor_has_borov_key} ph_door@closed %+val_x18_door_open +dar_run_quest%

[ph_door@closed]
locked = false
closed = true
on_use = ph_door@open %=arhara_dialog.td_preduprezhdenie1_sms1 +val_x18_actor_in%
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
locked = false
closed = false
on_use = ph_door@closed_1
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_timer = 5000 | ph_door@closed_1 %+val_x18_actor_out -val_x18_actor_in%

[ph_door@closed_1]
locked = false
closed = true
on_use = ph_door@open_1 %-val_x18_actor_out%
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open_1]
locked = false
closed = false
on_use = ph_door@closed
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_timer = 5000 | ph_door@closed 
